#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/interrupt-controller/arm-gic.h>
#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/pinctrl/adi-adsp.h>
#include <dt-bindings/clock/adi-sc5xx-clock.h>

/ {
	chosen {
		stdout-path = "serial0:115200";
		u-boot,dm-pre-reloc;
	};

	aliases {
		spi2 = "/spi2";
		serial0 = &uart0;
		u-boot,dm-pre-reloc;
	};

	clocks {
		dummy: dummy {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <0>;
			u-boot,dm-pre-reloc;
		};

		sys_clkin0: sys_clkin0 {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <25000000>;
			u-boot,dm-pre-reloc;
		};

		sys_clkin1: sys_clkin1 {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <25000000>;
			u-boot,dm-pre-reloc;
		};
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		device_type = "soc";
		ranges;
		u-boot,dm-pre-reloc;

		timer0: timer@0x31018000 {
			compatible = "adi,sc5xx-gptimer";
			reg = <0x31018004 0x100>,
					<0x31018060 0x100>;
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		pinctrl0: pinctrl@0x31004000 {
			compatible = "adi,adsp-pinctrl";
			reg = <0x31004000 0x500>;
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		gpio0: gpio@0x31004000 {
			compatible = "adi,adsp-gpio";
			reg = <0x31004000 0x500>;
			gpio-controller;
			#gpio-cells = <2>;
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		clk: clocks@0x3108d000 {
			reg = <0x3108d000 0x1000>,
				<0x3108e000 0x1000>,
				<0x3108f000 0x1000>;
			reg-names = "cgu0", "cgu1", "cdu";
			#clock-cells = <1>;
			clocks = <&dummy>, <&sys_clkin0>, <&sys_clkin1>;
			clock-names = "dummy", "sys_clkin0", "sys_clkin1";
			status = "okay";
			u-boot,dm-pre-reloc;
		};
		
		i2c0: i2c0@31001400 {
			compatible = "adi-i2c";
			reg = <0x31001400 0x1000>;
			clock-names = "i2c";
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		i2c1: i2c1@31001500 {
			compatible = "adi-i2c";
			reg = <0x31001500 0x1000>;
			clock-names = "i2c";
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		i2c2: i2c2@31001600 {
			compatible = "adi-i2c";
			reg = <0x31001600 0x1000>;
			clock-names = "i2c";
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		uart0: serial@0x31003000 {
			compatible = "adi,uart4";
			reg = <0x31003000 0x1000>;
			pinctrl-names = "default";
			pinctrl-0 = <&uart0_default>;
			clock-names = "sclk0";
			status = "okay";
			u-boot,dm-pre-reloc;
		};

		spi2: spi2 {
			compatible = "adi,spi3";
			#address-cells = <1>;
			#size-cells = <0>;
			pinctrl-names = "default";
			pinctrl-0 = <&spi2_default>;
			bus-num = <2>;
			spi-max-frequency = <10000000>;
			clock-names = "spi";
			status = "okay";
			u-boot,dm-pre-reloc;

			flash1: is25lp01g@1 {
				#address-cells = <1>;
				#size-cells = <1>;
				compatible = "jedec,spi-nor", "is25lp01g";
				reg = <1>;
				spi-tx-bus-width = <4>;
				spi-rx-bus-width = <4>;
				spi-max-frequency = <10000000>;
				u-boot,dm-pre-reloc;
			};
		};

		wdog: watchdog@31008000 {
			compatible = "adi,wdt";
			reg = <0x3108b000 0x1000>,
					<0x31089000 0x1000>,
					<0x31008000 0x1000>;
			reg-names = "rcu", "sec", "wdt";
			clock-names = "sclk0";
			status = "disabled";
			u-boot,dm-pre-reloc;
		};

		eth0: eth0 {
			compatible = "snps,arc-dwmac-3.70a";
			phy-mode = "rgmii";
			pinctrl-names = "default";
			pinctrl-0 = <&eth0_default>;
			snps,reset-active-low;
			snps,reset-delays-us = <1000 1000 1000>;
			status = "okay";
		};

	};
};
